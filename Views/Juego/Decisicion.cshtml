<div class="row">
    <div class="col-md-2">
        @for(int i = 0; i < 13; i++){
            <button class="btn btn-outline-warning btn-lg rectangulo">$@ViewBag.Importes[i]</button>
        }
    </div>

    <div class="col-md-8">
        <center>
            <h2 style="color: white;">EL IMPORTE DEL ULTIMO MALETIN ABIERTO ES:</h2>
            <h2 style="color: white;">$@ViewBag.ImporteAbierto</h2>
            <h2 style="color: white;">OFERTA DE LA BANCA:</h2>
            <h2 style="color: white;"> $@string.Format("{0:0.00}", ViewBag.Banca) </h2>
            <button type="button" class="btn btn-warning"><a style="color: black;" href='@Url.Action("decision", "Juego",new {decision="true"})'><h2>Aceptar</h2></a></button> 
            <button type="button" class="btn btn-warning"> <a style="color: black;" href='@Url.Action("decision", "Juego",new {decision="false"})'><h2>Rechazar</h2></a></button>
        </center>
    </div>

    
    <div class="col-md-2">
        @for(int i = 13; i < 26; i++){
            <button class="btn btn-outline-warning btn-lg rectangulo">$@ViewBag.Importes[i]</button>
        }
    </div>    
</div>
